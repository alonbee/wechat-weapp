.container {
  padding: 20px;
  border-top: 1px solid #eee;
}

.history-block {
    height: 20px;
    padding: 10px;
    margin: 0 20rpx;
    border-bottom: 1px solid #ebebeb;
}

.history-date {
    color: #888;
    font-size: 14px;
    line-height: 20px;
    vertical-align: middle;
}

.history-forward {
    width: 20px;
    height: 20px;
    float: right;
    vertical-align: middle;
}