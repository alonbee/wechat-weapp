/* pages/read/monthly/monthly.wxss */

.container {
  border-top: 1px solid #eee;
  height: 100%;
}

.carousel {
  height: 300rpx;
}

.carousel-item {
  position: relative;
  height: 150px;
}

.carousel-cover {
  width: 100%;
  height: 150px;
}

.carousel-meta {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 10rpx;
  color: #fefefe;
  font-size: 32rpx;
  font-weight: 500;
  background-color: rgba(0, 0, 0, 0.3);
}

.articles {
  width: 90%;
  margin: 30rpx auto;
  height: 800rpx;
}

.articles-card {
  margin: 20rpx 0;
  border: 1px solid #ebebeb;
  border-radius: 3px;
}

.article-item {
  padding: 30rpx;
}

.article-item+.article-item {
  border-top: 1px solid #ebebeb;
}

.article-header {
  margin-bottom: 5px;
}

.article-title {
  width: 80%;
  display: inline-block;
  font-size: 16px;
  line-height: 22px;
}

.article-type {
  float: right;
  font-size: 10px;
  font-weight: 200;
  padding: 5px 5px 5px 8px;
  color: #89bdf7;
  border: 1px solid #89bdf7;
  border-radius: 5px;
  letter-spacing: 3px;
}

.article-author {
  margin-top: 10rpx;
  font-size: 14px;
}

.article-content {
  font-size: 14px;
  line-height: 1.5;
}
