<template name="essay">
  <view class="article">
    <view class="header">
      <text>- ESSAY -</text>
    </view>
    <view class="title">
      <text>{{item.hp_title}}</text>    
    </view>
    <view class="author">
      <text>{{item.author[0].user_name}}</text>
    </view>
    <view class="picture">
      <image src="{{item.author[0].web_url}}" mode="aspectFill"></image>
    </view>
    <view class="content">
      <text>{{item.guide_word}}</text>
    </view>
    <view class="info clearfix">
      <view class="time">
        <text>{{item.hp_makettime}}小时前</text>
      </view>
      <view class="fav-share">
        <image wx:if="{{item.is_favorite}}" src="/images/icon/favorite_active.png" catchtap="onFavoriteTap" data-hp-id="{{item.hpcontent_id}}"></image>
        <image wx:else src="/images/icon/favorite.png" catchtap="onFavoriteTap" data-hp-id="{{item.hpcontent_id}}"></image>
        <image class="share" src="/images/icon/share.png" catchtap="onShareTap"></image> 
      </view>
    </view>
  </view>
  <view class="footer"></view>  
</template>