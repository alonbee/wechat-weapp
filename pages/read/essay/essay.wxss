/* pages/read/essay/essay.wxss */
.container {
    padding: 15px 10px;    
    border-top: 1px solid #eee;
}

.essay-author {
    display: inline-block;
    width: 80%;
    font-weight: 200;
    font-size: 12px;
}

.essay-author-avatar {
    width: 40px;
    height: 40px;
    float: left;
    margin-right: 25rpx;
    border-radius: 50%;
}

.essay-author-username {
    padding:3px 0 5px 0;
    color: #89bdf7;
}

.essay-author-makettime {
    color: #888;
}

.essay-title {
    margin: 40rpx 0 0;
}

.essay-content {
    font-size: 14px;
    line-height: 1.5;
}

.essay-author-introduce {
    margin-top: 20px;
    color: #888;
    font-size: 12px;
}
