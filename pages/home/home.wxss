/* pages/home/home.wxss */
.container {
    padding: 0 10px;
    border-top: 1px solid #eee;
    height: 100%;
}

.header {
    text-align: center;
    border-bottom: 1px solid #ccc;
    padding: 30rpx 0;
}

.date {
    font-size: 40rpx;
    display: block;
    margin-bottom: 10rpx;
}

.blessing {
    font-size: 26rpx;
}

.vol-swiper {
    height: 900rpx;
}

.vol-card {
    margin-top: 5px;
}

.vol-picture {
    width: 100%;
    height: 650rpx;
}

.vol-meta {
    text-align: right;
    border-bottom: 3px solid #ccc;
    padding: 0 20px 20px;
}

.vol-title {
    display: block;
    font-size: 36rpx;
}

.vol-author {
    font-size: 28rpx;
}

.vol-favorite {
    float: left;
    margin-left: 100rpx;
    margin-top: 30rpx;
}

.vol-share {
    float: right;
    margin-right: 100rpx;
    margin-top: 30rpx;
}

.vol-small-pic {
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin: 0 20rpx;
}

.vol-number {
    font-size: 16px;
    line-height: 20px;
    vertical-align: middle;
}




