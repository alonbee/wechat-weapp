/* pages/home/monthly/monthly.wxss */

.container {
  border-top: 1px solid #eee;
}

.vol-card {
    width: 50%;
    padding: 10rpx;
    display: inline-block;
    box-sizing: border-box;
}

.vol-header {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.vol-cover {
    width: 100%;
    height: 300rpx;
}

.vol-meta {
    width: 100%;
    position: absolute;
    bottom: 0;
    padding: 3px 5px;
    color: #fefefe;
    font-size: 20rpx;
    font-weight: 200;
    box-sizing: border-box;
    background-color: rgba(0, 0, 0, 0.3);
}

.vol-desc {
    padding: 5px 3px;
}

.vol-content {
    font-size: 12px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}