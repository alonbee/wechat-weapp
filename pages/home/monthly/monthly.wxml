<!--pages/home/monthly/monthly.wxml-->
<view class="container">
    <block wx:for="{{monthly}}" wx:key="hpcontent_id">
        <view class="vol-card" data-vol-id="{{item.hpcontent_id}}" catchtap="viewDetailTap">
            <view class="vol-header">
                <image class="vol-cover" src="{{item.hp_img_url}}" mode="aspectFill"></image>
                <view class="vol-meta">
                    <text>{{item.hp_author}}</text>
                </view>
            </view>
            <view class="vol-desc">
                <text class="vol-content">{{item.hp_content}}</text>
            </view>
        </view>
    </block>
</view>
